<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size android:height="26dp" android:width="100dp"/>
            <solid android:color="@color/colorAsiraWhite"/>
            <corners android:radius="3dp"/>
            <stroke
                android:width="1dp"
                android:color="#535353" />
        </shape>
    </item>

    <item android:drawable="@drawable/ic_down" android:width="10dp" android:height="10dp" android:gravity="end|center_vertical" android:end="10dp"/>

</layer-list>