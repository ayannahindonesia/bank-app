<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybackground">

    <LinearLayout
        android:id="@+id/lyProfile"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical"
        android:background="@drawable/top_bg_beranda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profilePict"
            android:src="@drawable/default_profile_picture"
            android:layout_gravity="center_horizontal"
            android:layout_width="105dp"
            android:layout_height="105dp"/>

        <TextView
            android:id="@+id/agentName"
            android:textSize="@dimen/fontLarge"
            tools:text="Test"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/agentPhone"
            android:textSize="@dimen/fontNormal"
            tools:text="+62 12127600 18"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/lyProfile"
        android:padding="@dimen/_16sdp"
        android:orientation="vertical"
        android:layout_above="@+id/allClient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Nasabah Baru"
            android:textStyle="bold"
            android:textColor="@color/textColorAsiraGrey"
            android:textSize="@dimen/fontLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Daftar nasabah yang paling baru terdaftar"
            android:textSize="@dimen/fontSmall"
            android:textColor="@color/textColorAsiraGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_6sdp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvBeranda"/>

        <TextView
            android:id="@+id/emptyData"
            android:text="data belum ada"
            android:textSize="@dimen/fontSmall"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_50sdp"
            android:textColor="@color/textColorAsiraGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/allClient"
        android:textSize="@dimen/fontNormal"
        android:padding="@dimen/_6sdp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_list_client"
        android:drawablePadding="@dimen/_3sdp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Nasabah terdaftar lainnya..."
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addMember"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_16sdp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_add_nasabah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>