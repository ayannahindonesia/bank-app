<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/_18sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--    <View-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_height="3dp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:background="@color/graybackground"/>-->

<!--    <View-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_height="3dp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:background="@color/graybackground"/>-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Penghasilan per Bulan:"
                android:layout_weight="1"
                android:textColor="@color/colorAsiraText"
                android:textSize="@dimen/fontNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/currentSalary"
                android:text="Rp25000000"
                android:textSize="@dimen/fontNormal"
                android:fontFamily="@font/manrope_bold"
                android:textColor="@color/colorAsiraAccent"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Penghasilan Lain-lain:"
                android:layout_weight="1"
                android:textColor="@color/colorAsiraText"
                android:textSize="@dimen/fontNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/anotherIncome"
                android:text="Rp5000000"
                android:fontFamily="@font/manrope_bold"
                android:textColor="@color/colorAsiraAccent"
                android:textAlignment="textEnd"
                android:textSize="@dimen/fontNormal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Sumber Pendapatan Lain:"
                android:layout_weight="1"
                android:textSize="@dimen/fontNormal"
                android:textColor="@color/colorAsiraText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/otherSourceIncome"
                android:textSize="@dimen/fontNormal"
                android:fontFamily="@font/manrope_bold"
                android:textColor="@color/colorAsiraAccent"
                android:textAlignment="textEnd"
                android:text="-"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dp20"
        android:text="Apakah ada perubahan dengan pendapatan anda?"
        android:textAlignment="center"
        android:textSize="@dimen/fontNormal"
        android:textStyle="bold"
        android:textColor="@color/colorAsiraText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yes"
            android:text="Ya"
            android:backgroundTint="@color/colorAsiraButtonBlue"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/no"
            android:text="Tidak"
            android:backgroundTint="@color/colorAsiraAccent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>