<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/colorAsiraWhite"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/CustomTitleActionBar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:background="@color/graybackground"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:padding="@dimen/dp16"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Nama (Sesuai KTP)"
                        android:textSize="@dimen/fontNormal"
                        android:textColor="@color/colorAsiraText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/etName"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/fontLarge"
                        tools:text="John Doe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Jenis Kelamin"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/jenisKelamin"
                        tools:text="Pria"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="No. KTP"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/etKTP"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="123456790"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Tanggal Lahir"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/etDateBirth"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="123456790"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Tempat Lahir"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/etBirthPlace"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="Jakarta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Pendidikan Terakhir"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/etCollageLevel"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="S1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Jumlah Tanggungan"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvTanggungan"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Nama Ibu Kandung"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvMomsName"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="Lorenzo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Status Perkawinan"
                        android:layout_marginTop="12dp"
                        android:textSize="@dimen/fontNormal"
                        android:textColor="@color/colorAsiraText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvPerkawinan"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="Belum menikah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/lySpouse"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Nama Pasangan"
                            android:layout_marginTop="12dp"
                            android:textSize="@dimen/fontNormal"
                            android:textColor="@color/colorAsiraText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvSpouseName"
                            android:textSize="@dimen/fontLarge"
                            android:textColor="@color/colorAsiraText"
                            android:fontFamily="@font/manrope_bold"
                            tools:text="-"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Tanggal Lahir Pasangan"
                            android:layout_marginTop="12dp"
                            android:textSize="@dimen/fontNormal"
                            android:textColor="@color/colorAsiraText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvSpouseBirthdate"
                            android:textSize="@dimen/fontLarge"
                            android:textColor="@color/colorAsiraText"
                            android:fontFamily="@font/manrope_bold"
                            tools:text="-"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Pendidikan"
                            android:layout_marginTop="12dp"
                            android:textSize="@dimen/fontNormal"
                            android:textColor="@color/colorAsiraText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvSpouseEdu"
                            android:textSize="@dimen/fontLarge"
                            android:textColor="@color/colorAsiraText"
                            android:fontFamily="@font/manrope_bold"
                            tools:text="-"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                app:cardCornerRadius="3dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/container3"
                    android:orientation="vertical"
                    android:padding="@dimen/dp16"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Alamat Domisili"
                        android:textColor="@color/colorAsiraText"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvAlamat"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="Jalan hararapan jaya raya no.51"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Provinsi"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="15dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvProvinsi"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="Provinsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Kota"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="15dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvKota"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="Kota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Kecamatan"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="15dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvKecamatan"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="Kecamatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Kelurahan"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="15dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvKelurahan"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="Kelurahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="RT"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvRt"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="001"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="RW"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvRw"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="001"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Telp Rumah"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="15dp"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvHomeNumber"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="021 8899822"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Lama Menempati Rumah"
                        android:textSize="@dimen/fontNormal"
                        android:textColor="@color/colorAsiraText"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvLamaMenempati"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="1 Tahun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Status Tempat Tinggal"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorAsiraText"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvHomeStatus"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@color/colorAsiraText"
                        android:fontFamily="@font/manrope_bold"
                        tools:text="pribadi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mode_edit_white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"/>


</RelativeLayout>