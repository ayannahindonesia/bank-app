<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_below="@+id/appbar"
        android:layout_above="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dp14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/container4"
                    android:orientation="vertical"
                    android:layout_below="@+id/container3"
                    android:padding="@dimen/dp16"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Info Pekerjaan"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontSuperLarge"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Jenis Pekerjaan"
                        android:layout_marginTop="15dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/spJenisPekerjaan"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="Autofill" />

                    <TextView
                        android:text="No. Induk Pegawai"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/noPegawai"
                        android:hint="16000939877399"
                        android:inputType="number"
                        android:paddingStart="@dimen/dp12"
                        android:paddingEnd="@dimen/dp12"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="Autofill" />

                    <TextView
                        android:text="Nama Instansi"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/namaInstansi"
                        android:inputType="text"
                        android:paddingStart="@dimen/dp12"
                        android:paddingEnd="@dimen/dp12"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/fontNormal"
                        android:hint="PT ABC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="Autofill" />

                    <TextView
                        android:text="Lama Bekerja"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="15dp"
                        android:textSize="@dimen/fontLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/lamaBekerja"
                            android:inputType="number"
                            android:hint="0"
                            android:paddingStart="@dimen/dp12"
                            android:paddingEnd="@dimen/dp12"
                            android:imeOptions="actionNext"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            tools:ignore="Autofill" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_gravity="center_vertical"
                            android:text="Tahun"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontLarge" />

                    </LinearLayout>

                    <TextView
                        android:text="Alamat Kantor"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/etAlamatKantor"
                        android:inputType="textMultiLine"
                        android:lines="2"
                        android:hint="Tulis disini..."
                        android:gravity="top"
                        android:paddingStart="@dimen/dp12"
                        android:paddingEnd="@dimen/dp12"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="Autofill" />

                    <TextView
                        android:text="No Telepon Kantor"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/etPhone"
                        android:inputType="phone"
                        android:paddingStart="@dimen/dp12"
                        android:paddingEnd="@dimen/dp12"
                        android:hint="02112345678"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="Autofill" />

                    <TextView
                        android:text="Nama Atasan"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/namaAtasan"
                        android:inputType="text"
                        android:paddingStart="@dimen/dp12"
                        android:paddingEnd="@dimen/dp12"
                        android:text="John Doe"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="Autofill" />

                    <TextView
                        android:text="Jabatan"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/jabatan"
                        android:inputType="text"
                        android:paddingStart="@dimen/dp12"
                        android:paddingEnd="@dimen/dp12"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/fontNormal"
                        android:hint="CEO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="Autofill" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                app:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/dp16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Informasi Penghasilan"
                        android:textSize="@dimen/fontLarge"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/dp12"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Penghasilan Perbulan"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etPenghasilan"
                        android:textSize="@dimen/fontNormal"
                        android:hint="25,000,000"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Pendapatan Lain"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etPendapatanLain"
                        android:textSize="@dimen/fontNormal"
                        android:hint="5,000,000"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Sumber Pendapatan Lain"
                        android:textSize="@dimen/fontLarge"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etSumberPendapatanLain"
                        android:textSize="@dimen/fontNormal"
                        android:paddingStart="10dp"
                        android:inputType="text"
                        android:paddingEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:text="Ubah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>