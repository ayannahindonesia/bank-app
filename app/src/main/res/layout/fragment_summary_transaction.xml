<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.summary.SummaryTransactionActivity">

    <ScrollView
        android:layout_below="@+id/appbar"
        android:layout_above="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Pengajuan peminjaman"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/pinjaman"
                            android:textColor="@android:color/holo_green_dark"
                            android:text="@string/default_currency_amount"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/fontLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Tenor peminjaman"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tenor"
                            android:textColor="@android:color/holo_green_dark"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/fontLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:padding="@dimen/dp10"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Bunga"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/bunga"
                            android:text="@string/default_currency_amount"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:weightSum="2"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Biaya admin"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/biayaAdmin"
                            android:text="@string/default_currency_amount"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:weightSum="2"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Angsuran per bulan"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/angsuranBulanan"
                            android:text="@string/default_currency_amount"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <!--<LinearLayout-->
                        <!--android:weightSum="2"-->
                        <!--android:layout_marginBottom="5dp"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content">-->

                        <!--<TextView-->
                            <!--android:text="Saldo poko pinjaman"-->
                            <!--android:layout_weight="1"-->
                            <!--android:textColor="@android:color/black"-->
                            <!--android:textSize="@dimen/fontNormal"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content" />-->

                        <!--<TextView-->
                            <!--android:id="@+id/saldoPokokPinjaman"-->
                            <!--android:text="@string/default_currency_amount"-->
                            <!--android:layout_weight="1"-->
                            <!--android:textColor="@android:color/black"-->
                            <!--android:textStyle="bold"-->
                            <!--android:textAlignment="textEnd"-->
                            <!--android:textSize="@dimen/fontNormal"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content" />-->

                    <!--</LinearLayout>-->

                    <LinearLayout
                        android:weightSum="2"
                        android:visibility="gone"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Estimasi Jatuh tempo"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/jatuhTempo"
                            android:text="5 Desember 2019"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/dp10"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Alasan mengajukan peminjaman:"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/alasan"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/fontLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:text="Detail tujuan pinjaman:"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tujuanPinjam"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/dp10"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Syarat dan Ketentuan"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fontLarge"
                        android:layout_marginBottom="@dimen/margin10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ScrollView
                        android:background="@drawable/border_disclaimer"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="@dimen/margin10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/disclaimer_paragraph1"
                                android:textSize="@dimen/fontNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="@string/disclaimer_paragraph2"
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/fontNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </ScrollView>

                    <CheckBox
                        android:id="@+id/checkDisclaimer"
                        android:text="Ya, saya setuju"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>