<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/graybackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingTop="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingEnd="@dimen/_14sdp"
                android:text="Layanan Pinjaman"
                android:textColor="@color/textColorAsira"
                android:textSize="@dimen/fontTitleBank" />

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/colorAsiraWhite">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_menuproducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/titleNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingEnd="@dimen/_14sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="Berita &amp; Promo"
                android:textColor="@color/textColorAsira"
                android:textSize="@dimen/fontTitleBank" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBeritaPromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp" />

            <TextView
                android:id="@+id/topuptagihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingEnd="@dimen/_14sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="Top-up &amp; Tagihan"
                android:textColor="@color/textColorAsira"
                android:textSize="@dimen/fontTitleBank" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTopup"
            android:background="@color/colorAsiraWhite"
            android:layout_width="match_parent"
            android:padding="@dimen/_14sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>