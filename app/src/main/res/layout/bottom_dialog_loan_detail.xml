<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="@dimen/fontLarge"
                android:text="Detil Pinjaman"/>

            <ImageButton
                android:id="@+id/close"
                android:layout_weight="0.9"
                android:src="@drawable/ic_close_black"
                android:background="?attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <TextView
            android:text="Id Pinjaman"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/idPinjaman"
            android:textColor="@color/colorBlueDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1234567"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/fontLarge"/>

        <TextView
            android:text="Tanggal Pengajuan"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tanggalPengajuan"
            android:textColor="@color/colorBlueDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="xyz"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/fontLarge"/>

        <LinearLayout
            android:id="@+id/lltTanggalApproval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:text="Tanggal Approval"
                android:textSize="@dimen/fontNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tanggalApproval"
                android:textColor="@color/colorBlueDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="xyz"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/fontLarge"/>

        </LinearLayout>

        <LinearLayout
