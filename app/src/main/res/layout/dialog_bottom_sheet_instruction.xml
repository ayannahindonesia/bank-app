<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/_22sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:background="@color/graybackground"/>

    <View
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_gravity="center"
        android:background="@color/graybackground"/>

    <ImageView
        android:id="@+id/imageInstruction"
        android:src="@drawable/ic_bank"
        android:scaleType="centerInside"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/title"
        android:textColor="@color/colorAsiraText"
        android:textSize="@dimen/fontNormal"
        android:layout_marginTop="@dimen/_14sdp"
        android:text="Kepemilikan Rekening"
        android:fontFamily="@font/manrope_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/description"
        android:textColor="@color/colorAsiraText"
        android:textSize="@dimen/fontNormal"
        android:layout_marginTop="10dp"
        tools:text="Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/lyButton"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnYa"
            android:layout_weight="0.5"
            android:text="Ya"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/colorAsiraButtonBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBelum"
            android:text="Tidak"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/colorAsiraAccent"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDialog"
        android:backgroundTint="@color/colorAsiraAccent"
        android:layout_marginTop="20dp"
        android:text="Ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>