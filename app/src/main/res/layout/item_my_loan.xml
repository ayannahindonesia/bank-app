<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="3"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="@dimen/dp16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Nomor Aplikasi Pinjaman"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/numLoan"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Nomor Aplikasi Pinjaman"
            android:textSize="@dimen/fontLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Jenis Pinjaman"
            android:layout_marginTop="@dimen/dp10"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/typeLoan"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Dana Talangan"
            android:textSize="@dimen/fontLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="@dimen/dp16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/status"
            android:padding="5dp"
            android:layout_gravity="end"
            tools:text="Tertunda"
            android:textColor="@android:color/white"
            android:background="@drawable/badge_tertunda"
            android:textAlignment="textEnd"
            android:textSize="@dimen/fontNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/amount"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Rp 3.000.000"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/fontLarge"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ImageView
        android:src="@drawable/ic_arrow_right"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>