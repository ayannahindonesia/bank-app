<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="2"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="@dimen/dp16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--<TextView-->
            <!--android:text="Nomor Aplikasi Pinjaman"-->
            <!--android:textSize="@dimen/fontNormal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/numLoan"
            tools:text="PNS-100-1"
            android:textSize="@dimen/fontSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengajuan Peminjaman"
            android:textSize="@dimen/fontNormal" />

        <TextView
            android:id="@+id/amount"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:text="Rp 3.000.000"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="@dimen/dp16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/typeLoan"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Pinjaman PNS"
            android:textAlignment="textEnd"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/status"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            tools:text="Tertunda"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/badge_tertunda"
            android:textAlignment="textEnd"
            android:textSize="@dimen/fontNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <!--<ImageView-->
        <!--android:src="@drawable/ic_arrow_right"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

</LinearLayout>