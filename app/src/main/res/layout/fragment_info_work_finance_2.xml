<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/graybackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/indicator"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="35dp"
        android:background="@color/darkgreybackground"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <View
        android:id="@+id/indicator2"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="330dp"
        android:layout_height="15dp"/>

    <TextView
        android:text="Penghasilan Pemohon"
        android:layout_below="@+id/indicator"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@android:color/black"
        android:textSize="@dimen/fontNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:padding="@dimen/dp16"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_above="@+id/buttonNext"
        android:layout_height="590dp">

        <TextView
            android:text="Penghasilan bersih/gaji sesuai Ledger per Bulan"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Pendapatan Lain-lain (Bila Ada)"
            android:layout_marginTop="@dimen/dp16"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="text"
            android:paddingStart="@dimen/dp12"
            android:paddingEnd="@dimen/dp12"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="Autofill" />

        <TextView
            android:text="Sumber Pendapatan Anda"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="text"
            android:paddingStart="@dimen/dp12"
            android:paddingEnd="@dimen/dp12"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="Autofill" />


    </LinearLayout>

    <Button
        android:id="@+id/buttonNext"
        android:text="Selanjutnya"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>