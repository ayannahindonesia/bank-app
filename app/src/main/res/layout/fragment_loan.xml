<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybackground">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp16">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Produk"
                    android:textColor="@color/textColorAsiraGrey"
                    android:textSize="@dimen/fontNormal"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/spinner_bg2" />

                <RelativeLayout
                    android:id="@+id/lyDataProdukEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Data produk kosong"
                        android:textSize="@dimen/fontNormal"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="5dp"
                        android:src="@drawable/ic_refresh_black" />

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jumlah Pinjaman"
                    android:textAlignment="center"
                    android:textColor="@color/textColorAsiraGrey"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/plafonMinMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textColor="#929292"
                    android:textSize="@dimen/fontNormal"
                    tools:text="Max 5 jt Min 50 jt" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textColorAsira"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Rp"
                        android:textColor="#FFF"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <com.ayannah.asira.custom.PlafondEditText
                        android:id="@+id/plafondCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/currency"
                        android:background="@android:color/transparent"
                        android:hint="1.000.000"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/_24sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_below="@+id/plafondCustom"
                        android:background="#FFF" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tenor Cicilan"
                            android:textColor="@color/textColorAsiraGrey"
                            android:textSize="@dimen/fontNormal" />

                        <TextView
                            android:id="@+id/tenorCicilan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="- bulan"
                            android:textAlignment="textEnd"
                            android:textColor="@color/textColorAsiraGrey"
                            android:textSize="@dimen/fontNormal"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekbarTenorCicilan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:progress="0"
                        android:progressTint="@color/textColorAsira"
                        android:max="9"
                        android:thumb="@drawable/ic_slider" />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jumlah Pinjaman"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fontLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nominalPinjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp 0"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/fontSuperLarge"
                android:textStyle="bold" />

        </LinearLayout>


        <SeekBar
            android:id="@+id/seekbarJumlahPinjaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:max="9"
            android:thumb="@drawable/custom_thumb"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Biaya Admin"
                        android:textColor="@color/textColorAsiraGrey"
                        android:textSize="@dimen/fontNormal" />

                    <TextView
                        android:id="@+id/biayaAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp -"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textColorAsiraGrey"
                        android:textSize="@dimen/fontNormal"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jumlah pencairan"
                        android:textColor="@color/textColorAsiraGrey"
                        android:textSize="@dimen/fontNormal" />

                    <TextView
                        android:id="@+id/jumlahPencairan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp -"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textColorAsiraGrey"
                        android:textSize="@dimen/fontNormal"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Angsuran per Bulan"
                        android:textColor="@color/textColorAsiraGrey"
                        android:textSize="@dimen/fontNormal" />

                    <TextView
                        android:id="@+id/angsuranPerbulan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp -"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textColorAsiraGrey"
                        android:textSize="@dimen/fontNormal"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Saldo Pokok Pinjaman"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fontNormal" />

            <TextView
                android:id="@+id/saldoPokokPinjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp -"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jatuh tempo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fontNormal" />

            <TextView
                android:id="@+id/tenor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 Mei 2019"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fontNormal" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <TextView
                    android:id="@+id/txtReasonTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apa alasan anda mengajukan peminjaman?"
                    android:textColor="@color/textColorAsiraGrey"
                    android:textSize="@dimen/fontNormal" />

                <Spinner
                    android:id="@+id/spAlasanPinjam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/spinner_bg2" />

                <RelativeLayout
                    android:id="@+id/lyDataAlasanEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Data alasan kosong"
                        android:textSize="@dimen/fontNormal"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/refreshAlasan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="5dp"
                        android:src="@drawable/ic_refresh_black" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lyAlasanLain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtOtherReasonTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mohon Masukan Alasan Anda Meminjam"
                        android:textColor="@color/colorAsiraGrey"
                        android:textSize="@dimen/fontNormal" />

                    <EditText
                        android:id="@+id/etAlasan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/textColorAsiraGrey"
                        android:hint="Isi alasan peminjaman disini"
                        android:textColor="@color/textColorAsiraGrey"
                        android:textSize="@dimen/fontNormal"
                        android:textStyle="bold" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etTujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/textColorAsiraGrey"
                    android:hint="Tuliskan detail tujuan"
                    android:inputType="text"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:textColor="@color/textColorAsiraGrey"
                    android:textSize="@dimen/fontNormal"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/llForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/buttonPinjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="#2D85E9"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:text="Selanjutnya"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</ScrollView>