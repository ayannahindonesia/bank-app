<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@android:color/black"
        android:textSize="@dimen/fontSuperLarge"
        android:text="Filter"
        android:drawableStart="@drawable/ic_filter"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@android:color/black"
        android:textSize="@dimen/fontNormal"
        android:text="Filter Berdasarkan Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/processing"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/fontLarge"
        android:text="Menunggu konfirmasi"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="3dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/accepted"
        android:textColor="@color/darkgreen"
        android:textSize="@dimen/fontLarge"
        android:text="Diterima"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="3dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/rejected"
        android:textColor="@color/customRed"
        android:textSize="@dimen/fontLarge"
        android:text="Ditolak"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="3dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>