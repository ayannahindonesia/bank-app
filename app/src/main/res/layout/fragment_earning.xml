<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dp16"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Pendapatan gaji per Bulan"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:padding="@dimen/dp12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/penghasilam"
            android:textSize="@dimen/fontSuperLarge"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:text="Rp 0"/>

        <SeekBar
            android:id="@+id/seekbarPenghasilan"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/custom_thumb"
            android:layout_marginTop="@dimen/dp10"
            android:max="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Penghasilan lain-lain (jika ada)"
            android:textSize="@dimen/fontNormal"
            android:textColor="@android:color/black"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etPendapatanLain"
            android:inputType="number"
            android:hint="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Sumber pendaptan lain"
            android:textSize="@dimen/fontNormal"
            android:textColor="@android:color/black"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etSumberPendapatanLain"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonNext"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:text="Selanjutnya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>