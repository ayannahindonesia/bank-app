<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/earning_primary"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="@dimen/fontLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rp"
                android:textSize="@dimen/fontSuperLarge"
                android:layout_marginEnd="3dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgreen"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:text="@string/earning_rp"/>

            <EditText
                android:id="@+id/etpenghasilam"
                android:inputType="number"
                android:layout_toEndOf="@+id/rp"
                android:hint="@string/earning_example_amount"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/darkgreen"
                android:textSize="@dimen/fontSuperLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <TextView
            android:text="@string/earning_secondary"
            android:textSize="@dimen/fontNormal"
            android:textColor="@android:color/black"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etPendapatanLain"
            android:inputType="number"
            android:hint="@string/earning_zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:text="@string/earning_other"
            android:textSize="@dimen/fontNormal"
            android:textColor="@android:color/black"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etSumberPendapatanLain"
            android:inputType="text"
            android:hint="@string/earning_example_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonNext"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:text="@string/earning_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>