<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/graybackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/dp14"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_7sdp"
            android:weightSum="5">

            <ImageView
                android:src="@drawable/indicator_page"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <ImageView
                android:src="@drawable/indicator_page"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <ImageView
                android:src="@drawable/indicator_page"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <ImageView
                android:src="@drawable/selected_indicator_page"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <ImageView
                android:src="@drawable/indicator_page"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dataPemohon"
            android:text="Informasi Pekerjaan"
            android:textAlignment="center"
            android:textColor="@color/colorAsiraText"
            android:textStyle="bold"
            android:textSize="@dimen/fontNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp20"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/container4"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Jenis Pekerjaan"
                    android:textColor="@color/colorAsiraText"
                    android:textSize="@dimen/fontLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spJenisPekerjaan"
                    android:textSize="@dimen/fontNormal"
                    android:background="@drawable/spinner_bg_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />

                <TextView
                    android:text="No. Induk Pegawai"
                    android:textColor="@color/colorAsiraText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/fontLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etEmployeeID"
                    android:hint="16000939877399"
                    android:backgroundTint="@color/colorAsiraText"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/fontNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />

                <TextView
                    android:text="Nama Instansi"
                    android:textColor="@color/colorAsiraText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/fontLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etCompanyName"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/fontNormal"
                    android:backgroundTint="@color/colorAsiraText"
                    android:hint="PT ABC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />

                <TextView
                    android:text="Lama Bekerja"
                    android:textColor="@color/colorAsiraText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/fontLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etLamaBekerja"
                        android:inputType="number"
                        android:hint="0"
                        android:imeOptions="actionNext"
                        android:backgroundTint="@color/colorAsiraText"
                        android:textSize="@dimen/fontNormal"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_gravity="center_vertical"
                        android:text="Tahun"
                        android:textStyle="bold"
                        android:textColor="@color/colorAsiraText"
                        android:textSize="@dimen/fontLarge" />

                </LinearLayout>

                <TextView
                    android:text="Alamat Kantor"
                    android:textColor="@color/colorAsiraText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/fontLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etAlamatKantor"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:hint="Tulis disini..."
                    android:gravity="top"
                    android:backgroundTint="@color/colorAsiraText"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/fontNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />

                <TextView
                    android:text="No Telepon Kantor"
                    android:textSize="@dimen/fontLarge"
                    android:textColor="@color/colorAsiraText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etCompanyPhone"
                    android:inputType="phone"
                    android:hint="02112345678"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/fontNormal"
                    android:backgroundTint="@color/colorAsiraText"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />

                <TextView
                    android:text="Nama Atasan"
                    android:textColor="@color/colorAsiraText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/fontLarge"
                    android:backgroundTint="@color/colorAsiraText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etSpvName"
                    android:inputType="text"
                    android:backgroundTint="@color/colorAsiraText"
                    android:hint="John Doe"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/fontNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />

                <TextView
                    android:text="Jabatan"
                    android:textColor="@color/colorAsiraText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/fontLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etJobTitle"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:backgroundTint="@color/colorAsiraText"
                    android:textSize="@dimen/fontNormal"
                    android:hint="CEO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:text="Info Pendapatan"
            android:textAlignment="center"
            android:textSize="@dimen/fontNormal"
            android:textColor="@color/colorAsiraText"
            android:layout_marginTop="@dimen/_16sdp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp20"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/container5"
                android:orientation="vertical"
                android:padding="@dimen/dp16"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Gaji per Bulan"
                    android:textSize="@dimen/fontLarge"
                    android:textColor="@color/colorAsiraText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etGajiBulanan"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:hint="0"
                    android:backgroundTint="@color/colorAsiraText"
                    android:textSize="@dimen/fontNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />


                <TextView
                    android:text="Pendapatan Lain (Jika Ada)"
                    android:textSize="@dimen/fontLarge"
                    android:textColor="@color/colorAsiraText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etPendapatanLain"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:backgroundTint="@color/colorAsiraText"
                    android:textSize="@dimen/fontNormal"
                    android:hint="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />

                <TextView
                    android:text="Sumber Pendapatan Lain"
                    android:textSize="@dimen/fontLarge"
                    android:textColor="@color/colorAsiraText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etSumberPendapatanLain"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:backgroundTint="@color/colorAsiraText"
                    android:textSize="@dimen/fontNormal"
                    android:hint="Sumber Pendapatan Lain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonNext"
            android:text="Selanjutnya"
            android:backgroundTint="@color/colorAsiraAccent"
            android:layout_margin="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_136sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>